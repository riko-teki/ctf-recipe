{
  "containers": {
    "ctf-recipe": {
      "image": "",
      "environment": {
        "APP_ENV": "release",
        "NODE_ENV": "production"
      },
      "ports": {
        "443": "HTTPS"
      }
    }
  },
  "publicEndpoint": {
    "containerName": "ctf-recipe",
    "containerPort": 443,
    "healthCheck": {
      "healthyThreshold": 2,
      "unhealthyThreshold": 2,
      "timeoutSeconds": 5,
      "intervalSeconds": 10,
      "path": "/",
      "successCodes": "200-499"
    }
  }
}
